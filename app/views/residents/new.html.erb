<h1>Hello world!</h1>
<%= form_tag "/residents", method: :post do %>
<div class="form-group">
  First Name: <input type="text" class="form-control" name="first_name" >
<div class="form-group">
  Last Name: <input type="text" class="form-control" name="last_name" >
</div>
<div class="form-group">
  Gender: <input type="text" class="form-control" name="gender" >
</div>
<div class="form-group">
  Bed_id: <input type="text" class="form-control" name="bed_id" >
</div>
<div class="form-group">
  Date Admitted: <input type="text" class="form-control" name="date_admitted" >
</div>
<div class="form-group">
  Date Released: <input type="text" class="form-control" name="date_released" >
</div>
<div class="form-group">
  Work Shift: <input type="text" class="form-control" name="work_shift" >
</div>
<div class="form-group">
  Status: <input type="text" class="form-control" name="status" >
</div>

<input type="submit" value="Add resident">
<% end %>